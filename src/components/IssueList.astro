---
/**
 * Props:
 * - items: Array<{ text: string, imgSrc: string, imgAlt?: string }>
 */
const { items = [] } = Astro.props;
---
<div class="item-list">
  {items.map(item => (
    <div class="item">
      <div class="item-text">
        <p>{item.text}</p>
      </div>
      <div class="item-image">
        <img src={item.imgSrc} alt={item.imgAlt || ''} />
      </div>
    </div>
  ))}
</div>

<style>
.item-list {
  display: flex;
  flex-direction: column;
  gap: 2rem;
}
.item {
  display: flex;
  align-items: center;
  gap: 2rem;
}
.item-text {
  flex: 1;
}
.item-image img {
  max-width: 300px;
  width: 100%;
  height: auto;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.08);
}
@media (max-width: 700px) {
  .item {
    flex-direction: column;
    align-items: flex-start;
  }
  .item-image img {
    max-width: 100%;
  }
}
</style>